{
  "name": "rome-contracts-template",
  "version": "0.1.0",
  "description": "Template to develop rome smart contracts",
  "private": true,
  "engines": {
    "node": ">= 16.0.0"
  },
  "repository": "github:romedao/rome-contracts-template",
  "author": "wighawag",
  "license": "MIT",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "template",
    "boilerplate",
    "hardhat",
    "solidity"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.12",
    "@openzeppelin/contracts": "^4.4.1",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cross-env": "^7.0.2",
    "dotenv": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.8.0",
    "hardhat-deploy": "^0.9.28",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "dev": "cross-env MINING_INTERVAL=\"3000,5000\" hardhat node --hostname 0.0.0.0 --watch",
    "test": "forge test",
    "execute": "node ./_scripts.js run",
    "prepare": "node ./.setup.js && hardhat typechain",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "void:deploy": "hardhat deploy"
  }
}
